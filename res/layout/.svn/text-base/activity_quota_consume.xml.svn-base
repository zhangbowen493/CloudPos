<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsumeQuotaActivity" 
    android:orientation="vertical"
    android:background="@color/act_bg" >

    <!-- <TextView
        android:id="@+id/tv_qca_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="定额消费：15元\n请刷卡" /> -->
    <include
        android:id="@+id/act_top"
        layout="@layout/activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="27dp"
         >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="35dp"
            android:src="@drawable/icon_pig" />

        <TextView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定额消费请刷卡"
            android:layout_marginRight="30dp"
            android:textSize="52sp"
            android:textColor="@color/white" />


        <View
            android:id="@+id/quota_load"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/quota_load"
             />
        <TextView
            android:id="@+id/tv_consume_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="200dp"
            android:textSize="30sp"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_qca_money"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:textSize="100sp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:textColor="#fff"
        android:text="元"
        android:background="@drawable/quota_tv_bg"/>

    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="62dp"
        android:padding="15dp"
        android:gravity="center_vertical"
        >
        <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/iv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_id" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_id"
            android:text="员工ID："
            android:textSize="45sp"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv1"
            android:text=""
            android:textSize="45sp"
            android:textColor="@color/white" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/iv_consume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_this" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_consume"
            android:text="本次消费："
            android:textSize="45sp"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/tv_consume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv2"
            android:text="元"
            android:textSize="45sp"
            android:textColor="@color/white" />
    </RelativeLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:gravity="center_vertical"
        >
        <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

            <ImageView
            android:id="@+id/iv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_name" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_name"
            android:text="姓名："
            android:textSize="45sp"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv3"
            android:text=""
            android:textSize="45sp"
            android:textColor="@color/white" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/iv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_car" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_balance"
            android:text="卡片余额："
            android:textSize="45sp"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv4"
            android:text="元"
            android:textSize="60sp"
            android:textColor="@color/white" />
        
    </RelativeLayout>
    </LinearLayout>

</LinearLayout>
