<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="103dp"
    android:background="@color/act_bg"
    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/tv_trade_item_number"
         android:layout_height="match_parent"
                android:layout_width="0dp"
            android:layout_weight="357"
                android:text="1234567890123465789"
                android:textColor="#4dc6f6"
                android:textSize="30sp"
                android:gravity="center"
                />
    
    <TextView 
        android:id="@+id/tv_trade_item_time"
                android:layout_width="0dp"
            android:layout_weight="338"
            android:layout_height="match_parent"
                android:text="2016/06/22/10:09:53"
                android:textColor="#4dc6f6"
                android:textSize="30sp"
                android:gravity="center"
                />
        <TextView 
            android:id="@+id/tv_trade_item_money"
                android:layout_width="0dp"
                android:layout_weight="153"
                android:layout_height="match_parent"
                android:text="567.00"
                android:textColor="#4dc6f6"
                android:textSize="30sp"
                android:gravity="center"
                />
        <TextView 
            android:id="@+id/tv_trade_item_upload"
                android:layout_width="0dp"
                android:layout_weight="175"
                android:layout_height="match_parent"
                android:text="已上送"
                android:textColor="#4dc6f6"
                android:textSize="30sp"
                android:gravity="center"
                />
    

</LinearLayout>
