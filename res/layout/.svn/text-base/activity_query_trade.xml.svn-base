<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_bg"
    android:orientation="vertical"
    tools:context=".QueryTradeActivity" >
    
    <include
            android:id="@+id/act_top"
            layout="@layout/activity_title" />
    

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:orientation="horizontal"
        >
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_weight="357"
            android:layout_height="match_parent"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡号"
                android:textColor="#fff"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/icon_ncar"
                />
        </RelativeLayout>
        <View 
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="#1e263d"
            />
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_weight="338"
            android:layout_height="match_parent"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textColor="#fff"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/icon_time"
                />
        </RelativeLayout>
        <View 
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="#1e263d"
            />
        <TextView 
                android:layout_width="0dp"
                android:layout_weight="153"
                android:layout_height="match_parent"
                android:text="金额"
                android:textColor="#fff"
                android:textSize="30sp"
                android:gravity="center"
                />
        <View 
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="#1e263d"
            />
        <TextView 
                android:layout_width="0dp"
                android:layout_weight="175"
                android:layout_height="match_parent"
                android:text="上送状态"
                android:textColor="#fff"
                android:textSize="30sp"
                android:gravity="center"
                />
        
    </LinearLayout>
    <View 
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#1e263d"
            />

    <ListView
        android:id="@+id/lv_trade"
        android:layout_width="match_parent"
        android:divider="#1e263d"
        android:dividerHeight="3dp"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>
