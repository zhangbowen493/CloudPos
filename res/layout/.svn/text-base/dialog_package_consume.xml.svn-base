<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800dp"
    android:layout_height="530dp"
    android:background="@drawable/dialog_bg" >
    <include 
        android:id="@+id/dialog_title"
        layout="@layout/dialog_title"
        />
    <LinearLayout 
        android:layout_below="@id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <LinearLayout 
        android:layout_height="100dp"
        android:layout_marginTop="56dp"
	    android:layout_marginBottom="35dp"
	    android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_width="match_parent"
        android:background="@drawable/et_bg"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:src="@drawable/icon_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <EditText
        android:id="@+id/edt_dialog_package_money"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@null"
        android:textSize="28sp"
        android:textColor="#fff"
        android:hint="请输入金额（单位：元）"
        android:textColorHint="#fff"
        android:inputType="number"
        android:singleLine="true"
        android:ems="10" >

        <requestFocus />
    </EditText>
    </LinearLayout>
        <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="222dp"
        android:layout_marginRight="222dp"
        android:orientation="horizontal"
        >
        <ImageView 
            android:id="@+id/iv_dialog_package_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="55dp"
            android:src="@drawable/icon_quxiao"
            />
        <ImageView 
            android:id="@+id/iv_dialog_package_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_ok"
            />
    </LinearLayout>
    </LinearLayout>
    

</RelativeLayout>
