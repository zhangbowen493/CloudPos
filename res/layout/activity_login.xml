<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="@color/act_bg"  >
    <include
        android:id="@+id/act_top"
        layout="@layout/activity_title" />
    
    <LinearLayout 
        android:layout_height="144dp"
        android:layout_marginTop="82dp"
        android:layout_marginLeft="130dp"
    android:layout_marginRight="130dp"
        android:layout_width="match_parent"
        android:background="@drawable/et_bg"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:src="@drawable/icon_number"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            />
        <EditText
        android:id="@+id/edt_la_account"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@null"
        android:textSize="48sp"
        android:textColor="#fff"
        android:hint="请输入编号"
        android:textColorHint="#fff"
        android:inputType="number"
        android:singleLine="true"
        android:ems="10" >

        <requestFocus />
    </EditText>
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_height="144dp"
        android:layout_marginLeft="130dp"
    android:layout_marginRight="130dp"
        android:layout_width="match_parent"
        android:background="@drawable/et_bg"
        android:gravity="center_vertical"
        android:layout_marginTop="52dp"
        >
        <ImageView 
            android:src="@drawable/icon_lock"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            />
        <EditText
        android:id="@+id/edt_la_password"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@null"
        android:textSize="48sp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:hint="请输入六位密码"
        android:singleLine="true"
        android:inputType="number"
        android:ems="10" >

       
    </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btn_la_login"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginLeft="302dp"
        android:layout_marginRight="302dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/btn_bg_green"
        android:textColor="#fff"
        android:textSize="52sp"
        android:text="签到" />

</LinearLayout>
