<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_bg"
    android:orientation="vertical"
    tools:context=".SystemParameterActivity" >

    <include
        android:id="@+id/act_top"
        layout="@layout/activity_title" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务器ip地址："
            android:textSize="32sp"
            android:textColor="#fff"
            />
        <EditText 
            android:id="@+id/edt_system_parameter_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:singleLine="true"
            android:textColor="#fff"
            android:background="@null"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal"
        android:background="#505979"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="端口号："
            android:textColor="#fff"
            android:textSize="32sp"
            />
        <EditText 
            android:id="@+id/edt_system_parameter_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="#fff"
            android:singleLine="true"
            android:textSize="32sp"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="终端号:"
            android:textColor="#fff"
            android:textSize="32sp"
            />
        <EditText 
            android:id="@+id/edt_sys_parameter_terminal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="32sp"
            android:singleLine="true"
            android:textColor="#fff"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#505979"
        android:paddingLeft="30dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银联密钥:"
            android:textColor="#fff"
            android:textSize="32sp"
            />
        <EditText 
            android:id="@+id/edt_sys_upk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="32sp"
            android:singleLine="true"
            android:textColor="#fff"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银联服务器IP:"
            android:textColor="#fff"
            android:textSize="32sp"
            />
        <EditText 
            android:id="@+id/edt_sys_cup_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="32sp"
            android:singleLine="true"
            android:textColor="#fff"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#505979"
        android:paddingLeft="30dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银联服务器端口:"
            android:textColor="#fff"
            android:textSize="32sp"
            />
        <EditText 
            android:id="@+id/edt_sys_cup_parameter_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="32sp"
            android:singleLine="true"
            android:textColor="#fff"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:paddingLeft="30dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银联终端号："
            android:textColor="#fff"
            android:textSize="32sp"
            />
        <EditText 
            android:id="@+id/edt_zhongduan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="32sp"
            android:singleLine="true"
            android:textColor="#fff"
            />
    </LinearLayout>
    
    <Button 
        android:id="@+id/btn_system_parameter_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:textColor="#fff"
        android:textSize="32sp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_bg_green"
        />
    

</LinearLayout>
